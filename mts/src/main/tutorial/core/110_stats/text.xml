<?xml version="1.0" encoding="UTF-8"?>
<!-- Related XMLSchema file: conf/schemas/scenario.xsd -->

<scenario>

    <stats>
    	<reset name="textDescr1"/>
    </stats>

    <parameter name="[timestamp]" operation="system.timestamp" />
    <parameter name="[timestamp]" operation="number.add" value="[timestamp]" value2="10000"/>

    <stats>
        <text name="textDescr1" summary="t1" complete="textLongDescr1">
            <newValue value="does not appear because erased by the following"/>
            <newValue>bonjour !</newValue>
        </text>
        <text name="textDescr2" summary="t2" complete="textLongDescr2">
            <newValue milliseconds="[timestamp]">my name is MTS</newValue>         
        </text>        
    </stats>
    
    <parameter name="[textDescr1]" operation="system.statCounter" value="user" value2="textDescr1"/>
    <test parameter="[textDescr1.Text]" condition="string.equals" value="bonjour !"/> 

    <parameter name="[textDescr2]" operation="system.statCounter" value="user" value2="textDescr2"/>
    <test parameter="[textDescr2.Text]" condition="string.equals" value="my name is MTS"/> 

    <parameter name="[filePath]" operation="system.statCounter" value="test" value2="File_path"/>
    <test parameter="[filePath.Text]" condition="string.endsWith" value="/tutorial/core/test.xml"/> 
       
</scenario>
