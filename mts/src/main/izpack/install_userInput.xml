<?xml version="1.0" encoding="iso-8859-1"?>
<izpack:userinput version="5.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:izpack="http://izpack.org/schema/userinput"
	xsi:schemaLocation="http://izpack.org/schema/userinput http://izpack.org/schema/5.0/izpack-userinput-5.0.xsd">

	<panel id="UserInputPanelWindows">
		<createForPack name="base" />

		<field type="title" txt="Configuration of the application"
			align="left" />

		<field type="search" variable="NGN_JAVA_HOME">
			<spec txt="Java bin directory :" type="directory" result="directory">
				<choice value="$JAVA_HOME\bin" />
				<choice value="C:\Program Files\Java\jre6\bin" />
				<choice value="C:\Program Files\Java (x86)\jre6\bin" />
				<choice value="C:\Program Files\Java\jre7\bin" />
				<choice value="C:\Program Files\Java\jre7\bin" />
				<choice value="C:\Program Files\Java (x86)\jre7\bin" />
			</spec>
		</field>

		<field type="search" variable="BROWSER_PATH">
			<spec txt="WEB browser (statistic report) :" type="file" result="file">
				<choice value="C:\Program Files\Mozilla Firefox\firefox.exe" />
				<choice value="C:\Program Files\Internet Explorer\iexplore.exe" />
			</spec>
		</field>

		<field type="search" variable="EDITOR_PATH">
			<spec txt="Text editor (XML scripts) : (Default editor = '\' )"
				type="file" result="file">
				<choice value="\" set="\" />
				<choice value="C:\Program Files (x86)\Notepad++\notepad++.exe" />
				<choice value="C:\Program Files\Notepad++\notepad++.exe" />
				<choice value="C:\Program Files\PSPad editor (x86)\pspad.exe" />
				<choice value="C:\Program Files\PSPad editor\pspad.exe" />
				<choice value="C:\Program Files\UltraEdit (x86)\uedit32.exe" />
				<choice value="C:\Program Files\UltraEdit\uedit32.exe" />
				<choice value="C:\Program Files\Windows NT\Accessories\wordpad.exe" />
			</spec>
		</field>


		<field type="rule" variable="java_memory">
			<spec txt="Memory:" layout="N:5:5" set="1024" size="5">
			</spec>
		</field>

	</panel>

	<!-- PANEL FOR UNIX SYSTEM -->
	<panel id="UserInputPanelUnix">
		<createForPack name="base" />

		<field type="title" txt="Configuration of the application"
			align="left" />


		<field type="search" variable="NGN_JAVA_HOME">
			<spec txt="Java bin directory :" type="directory" result="directory">
				<choice value="$JAVA_HOME/bin" />
				<choice value="/usr/lib/jvm/java-7-sun/jre/bin" />
				<choice value="/usr/lib/jvm/java-6-sun/jre/bin" />
				<choice value="/usr/lib/java/bin" />
				<choice value="/opt/java/bin" />
			</spec>
		</field>

